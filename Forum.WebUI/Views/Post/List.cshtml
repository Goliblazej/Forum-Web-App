@using Forum.Domain.Entities
@model IEnumerable<Post>

@{
    ViewBag.Title = "Posts";
}

<div class="container">


    <div class="panel-group">
        @for (int i = 0; i < 100; i++)
        {
            foreach (var p in Model)
            {
                <div class="panel panel-success">
                    <div class="panel-heading">
                            @p.PostID.ToString()
                            <p class="text-right">@p.PostDate</p>
                    </div>
                    <div class="panel-body">@p.PostBody</div>
                </div>
            }
        }
    </div>
</div>
